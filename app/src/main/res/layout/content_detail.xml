<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sanke46.android.e_commerce.ui.navigation.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:showIn="@layout/activity_detail">

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/mainPadding"
                android:paddingTop="@dimen/mainPadding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/spicy"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ic_burn_button" />

                    <ImageView
                        android:id="@+id/vegan"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_vegetarians" />
                </LinearLayout>


                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="0dp"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/salesPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_red_button"
                        android:gravity="right"
                        android:paddingBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:textColor="#FFF"
                        android:textSize="16dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/mainPadding"
                android:paddingTop="@dimen/mainPadding">

                <TextView
                    android:id="@+id/info_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:textColor="#333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_only_left"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/minus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_only_left_two"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="-"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/howMany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="1"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#d1272a"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="+"
                        android:textColor="#FFF" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/addToCart"
                    android:layout_weight=".6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_only_right"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:background="@drawable/border_only_right"
                        android:text="@string/add_to_cart" />

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_only_right"
                        android:src="@drawable/ic_checkmark_for_verification"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:text="@string/more_information"
                        android:textColor="#333"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ececec" />
            </LinearLayout>

            <ListView
                android:id="@+id/allInformation"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_marginTop="5dp">

            </ListView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
