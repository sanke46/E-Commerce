<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sanke46.android.e_commerce.ui.navigation.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:showIn="@layout/activity_detail">

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/mainPadding"
                android:paddingTop="@dimen/mainPadding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Заголовок"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/spicy"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ic_burn_button" />

                    <ImageView
                        android:id="@+id/vegan"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_vegetarians" />
                </LinearLayout>


                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="0dp"
                    android:text="6,99$"
                    android:textSize="20dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="0dp"
                        android:layout_marginRight="13dp"
                        android:text="6,99$"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/salesPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@drawable/border_red_button"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:text="6,99$"
                        android:textSize="16dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/mainPadding"
                android:paddingTop="@dimen/mainPadding">

                <TextView
                    android:id="@+id/info_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been"
                    android:textColor="#333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_only_left"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/minus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_only_left_two"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="-"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/howMany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="0"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#d1272a"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="+"
                        android:textColor="#FFF" />
                </LinearLayout>

                <Button
                    android:id="@+id/addToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight=".6"
                    android:background="@drawable/border_only_right"
                    android:text="Add to cart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:text="More information"
                        android:textColor="#333"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ececec" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingTop="13dp">-->

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="7dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@color/colorBlue"-->
                    <!--android:gravity="center"-->
                    <!--android:padding="7dp"-->
                    <!--android:text="Gramms"-->
                    <!--android:textColor="#fff"-->
                    <!--android:textSize="15sp" />-->

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight=".5"-->
                    <!--android:background="#eee"-->
                    <!--android:gravity="center"-->
                    <!--android:padding="7dp"-->
                    <!--android:text="1440 kal."-->
                    <!--android:textSize="15sp" />-->

            <!--</LinearLayout>-->

            <ListView
                android:id="@+id/allInformation"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="255dp">

            </ListView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
