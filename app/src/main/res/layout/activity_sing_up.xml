<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorRed"
    android:padding="30dp"
    tools:context="com.sanke46.android.e_commerce.ui.navigation.SingUpActivity">

    <ImageView
        android:id="@+id/logoLogIn"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:src="@drawable/logotwo"/>

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing up"
        android:textColor="#fff"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="@dimen/_30sdp"
        />

    <EditText
        android:id="@+id/newName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/edit_text"
        android:textSize="16sp"
        android:textColor="#333" />

    <EditText
        android:id="@+id/newEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/edit_text"
        android:textSize="16sp"
        android:textColor="#333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/newPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="14dp"
            android:textSize="16sp"
            android:background="@drawable/edit_text"
            android:textColor="#333" />

        <!--<EditText-->
            <!--android:id="@+id/confirm_pass"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="14dp"-->
            <!--android:layout_marginLeft="7dp"-->
            <!--android:layout_marginBottom="14dp"-->
            <!--android:hint="confirm password"-->
            <!--android:background="@drawable/edit_text"-->
            <!--android:textColor="#333" />-->
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#70ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="by tapping 'Sing up' you agree to the conditions"/>

    <Button
        android:id="@+id/sibmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b72027"
        android:text="submit" />
</LinearLayout>
